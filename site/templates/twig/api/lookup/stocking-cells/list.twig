{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	cells              Customer[]|ObjectCollectiion
	datamatcher            module RegexData
	q                      Search
#}
<table id="cell-index" class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('id') }}" class="link">Code</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('description') }}" class="link">Description</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if cells.count() %}
			{% for cell in cells %}
				<tr>
					<td scope="row">
						<a href="#" class="link cell-link" data-id="{{ cell.id }}" data-description="{{ cell.description }}">
							<strong>{{ cell.id }}</strong>
						</a>
					</td>
					<td class="{{ datamatcher.string(cell.description, q) ? 'highlight' : '' }}">
						{{ cell.description }}
					</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="2" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
