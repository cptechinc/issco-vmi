{% extends 'whse/vmi/_form.twig' %}
{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	vmi                    module VendorManagedInventory
	order                  VmiOrder
#}
{% block form %}
	<div class="form-group">
		<a href="{{ page.exit_orderingURL }}" class="btn btn-warning">
			<i class="fa fa-undo" aria-hidden="true"></i> Back
		</a>
	</div>
	<form action="{{ page.fullURL.getUrl() }}" method="post" id="vmi-form">
		<input type="hidden" name="form" value="order">
		<input type="hidden" name="action" value="create-order">
		<input type="hidden" name="custID" value="{{ order.custid }}">
		<input type="hidden" name="shiptoID" value="{{ order.shiptoid }}">
		<input type="hidden" name="cell" value="{{ order.cell }}">
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label for="" class="mb-0">For</label>
			</div>
			<div class="col-sm-8">
				{{ order.custid }}-{{ order.shiptoid }}-{{ order.cell }}
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label class="mb-0" for="itemID">Item ID</label>
			</div>
			<div class="col-sm-8">
				{% include 'util/form/input-modal-lookup.twig' with {'name': 'itemID', 'value': '', 'modaltarget': '#ajax-modal', 'modaldescription': 'Search for / Choose Item', 'attributes_button': {'data-search': 'cstkitem'}} %}
				<p class="help-text item-description mt-1 mb-0"></p>
				<p class="help-text item-description2 mb-0"></p>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label class="mb-0" for="custitemID">Customer Item</label>
			</div>
			<div class="col-sm-8">
				<p class="form-control-plaintext form-control-sm mb-0" id="custitemID"></p>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label class="mb-0" for="caseqty">Case Qty</label>
			</div>
			<div class="col-sm-8">
				<p class="form-control-plaintext form-control-sm" id="caseqty"></p>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label class="mb-0" for="cases">Cases</label>
			</div>
			<div class="col-sm-8">
				<input type="number" class="form-control form-control-sm w-50 text-right" name="cases" id="cases" value="0">
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-4 mb-0">
				<label class="mb-0" for="qty">Quantity</label>
			</div>
			<div class="col-sm-8">
				<input type="number" class="form-control form-control-sm w-50 text-right" name="qty" min="1" id="qty" value="0">
			</div>
		</div>
		<div class="d-flex justify-content-between align-items-center">
			<button type="submit" class="btn btn-success mt-3">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
			<a href="{{ page.exit_orderingURL }}" class="btn btn-warning">
				<i class="fa fa-times" aria-hidden="true"></i> Cancel
			</a>
		</div>
	</form>
{% endblock form %}
